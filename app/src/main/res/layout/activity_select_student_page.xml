<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_student_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#522ea9"
    tools:context="com.midigital.fujitsu.midigital.Parent.SelectStudentPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT STUDENT"
        android:textSize="30dp"
        android:textColor="#ffff"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:fontFamily="serif"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/student_lst"
        android:background="#ffff"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="REFRESH"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:background="#fb736c"
        android:textColor="#ffff"
        />



</LinearLayout>
