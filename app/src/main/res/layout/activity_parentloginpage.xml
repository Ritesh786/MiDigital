<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_parentloginpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.midigital.fujitsu.midigital.Parent.ParentLoginPage"
    android:orientation="vertical"
    android:background="#522ea9"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PARENT LOGIN"
        android:textSize="30dp"
        android:textColor="#ffff"
        android:layout_marginTop="30dp"
       android:layout_gravity="center"
        android:fontFamily="serif"
        />

    <ImageView
        android:id="@+id/img_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Registered Mobile Number"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"/>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_login_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:layout_gravity="center"
        android:maxLength="10"


        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:id="@+id/login_username"
            android:layout_gravity="center"
            android:maxLength="10"
            android:inputType="number"
            />


    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:textSize="20sp"
        android:background="#fb736c"
        android:id="@+id/parentfinal_login"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"/>

</LinearLayout>
